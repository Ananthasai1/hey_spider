# Hey Spider Robot Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# OpenAI API Configuration
# ============================================
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# Model to use (gpt-4, gpt-3.5-turbo, etc.)
AI_MODEL=gpt-4

# ============================================
# Voice Settings
# ============================================
# Wake word for voice activation
WAKE_PHRASE=hey spider

# Voice timeout in seconds
VOICE_TIMEOUT=5

# Language for voice recognition (e.g., en-US, es-ES)
VOICE_LANGUAGE=en-US

# ============================================
# Web Interface
# ============================================
# Port for web dashboard
WEB_PORT=5000

# Host to bind to (0.0.0.0 = all interfaces)
WEB_HOST=0.0.0.0

# ============================================
# Camera Settings
# ============================================
# Enable camera (true/false)
CAMERA_ENABLED=true

# Camera resolution
CAMERA_WIDTH=640
CAMERA_HEIGHT=480

# Camera FPS
CAMERA_FPS=30

# Auto-capture interval (seconds)
AUTO_CAPTURE_INTERVAL=30

# ============================================
# Vision Detection
# ============================================
# Confidence threshold for object detection (0.0-1.0)
CONFIDENCE_THRESHOLD=0.5

# YOLO model to use
# Options: yolov8n.pt (nano), yolov8s.pt (small), yolov8m.pt (medium)
YOLO_MODEL=yolov8n.pt

# Whether to use YOLOv12 if available
USE_YOLO_V12=false

# Detection interval (seconds between detections)
DETECTION_INTERVAL=0.1

# ============================================
# AI Reasoning
# ============================================
# Interval for AI thinking loop (seconds)
AI_THINKING_INTERVAL=15

# Temperature for AI responses (0.0-1.0, higher = more creative)
AI_TEMPERATURE=0.8

# ============================================
# Hardware Settings
# ============================================
# Servo frequency (Hz)
SERVO_FREQUENCY=50

# Motor speed (0.02 = default)
MOVEMENT_SPEED=0.02

# OLED update interval (seconds)
OLED_UPDATE_INTERVAL=0.5

# ============================================
# Logging
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/spider.log

# ============================================
# Debug Settings
# ============================================
# Enable debug mode
DEBUG_MODE=false

# Use mock hardware (for testing without Raspberry Pi)
MOCK_HARDWARE=false

# ============================================
# Optional Advanced Settings
# ============================================
# YOLO device (auto, cpu, cuda, or GPU index)
# YOLO_DEVICE=auto

# Max detections per frame
# MAX_DETECTIONS=20

# IOU threshold for NMS
# IOU_THRESHOLD=0.4